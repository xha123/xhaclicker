<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/title1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/mineshow_show_iv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/clicker_def"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    app:actualImageScaleType="centerCrop"
                    app:roundAsCircle="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mineshow_show_iv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:text="@string/touins"
                    android:textColor="@color/f2f"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="30dp"
                android:background="@color/e7"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="15dp"
                android:text="个人描述"
                android:textColor="@color/black"
                android:textSize="14sp"
                />
            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:background="@color/f7"
                android:layout_width="match_parent"
                android:layout_height="71dp">
                <EditText
                    android:id="@+id/mineshow_personshow_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/f7"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:maxLines="3"
                    android:gravity="top"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <ImageView
                    android:id="@+id/mineshow_person_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/mine_timer"
                    />
                <EditText
                    android:id="@+id/mineshow_personname_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60dp"
                    android:background="@color/f7"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#d1d1d1"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐私信息"
                android:layout_gravity="right"
                android:layout_marginTop="14dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                />
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/mine_timer"
                    />
                <EditText
                    android:id="@+id/mineshow_phone_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60dp"
                    android:background="@color/f7"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:hint="@string/phonenumber"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/mine_timer"
                    />
                <EditText
                    android:id="@+id/mineshow_email_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60dp"
                    android:background="@color/f7"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:paddingLeft="5dp"
                    android:hint="@string/youxiang"
                    android:maxLines="1"
                    />
            </RelativeLayout>
            <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="37dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/mine_timer"
                />
            <EditText
                android:id="@+id/mineshow_sex_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:background="@color/f7"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:paddingLeft="5dp"
                android:maxLines="1"
                android:maxLength="1"
                android:hint="@string/xing"
                />

        </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>