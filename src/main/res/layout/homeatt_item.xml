<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:indicator="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/attitem_showping_rl"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/attitem_pinglun_ed"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/gray_rond_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/attitem_showping_rl"
        android:layout_toEndOf="@+id/attitem_showping_rl">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/attitem_name_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                app:actualImageScaleType="centerCrop"
                app:roundAsCircle="true"
                />
            <TextView
                android:id="@+id/attitem_name_tv"
                android:text="woshi打酱油"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/attitem_name_iv"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:textSize="13sp"
                android:textColor="@color/black"
                />
            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/attitem_deltu_iv"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:src="@mipmap/deltu"
                    />
                <ImageView
                    android:id="@+id/attitem_add_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:padding="3dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/addparents"
                    />
                <ImageView
                    android:id="@+id/attitem_guanmzhu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/attitem_add_iv"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/yiguanzhu"
                    />
            </RelativeLayout>

        </RelativeLayout>
        <com.yaoyao.clicker.view.CustomViewpager
            android:id="@+id/attitem_viewpager"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </com.yaoyao.clicker.view.CustomViewpager>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/attitem_show_iv"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            app:actualImageScaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </com.facebook.drawee.view.SimpleDraweeView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/attitem_xing_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginLeft="2dp"
                android:src="@mipmap/home_kongxin"
                />
            <ImageView
                android:id="@+id/attitem_pinglun_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/attitem_xing_iv"
                android:padding="8dp"
                android:src="@mipmap/g_pinglun"
                />
            <ImageView
                android:id="@+id/attitem_xiaoxi_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/attitem_pinglun_iv"
                android:padding="8dp"
                android:src="@mipmap/g_zhuanfa"
                />
            <ImageView
                android:id="@+id/attitem_share_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:padding="8dp"
                android:src="@mipmap/g_share"
                />
            <com.yaoyao.clicker.view.Xcircleindicator
                android:id="@+id/attitem_yuan_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                indicator:fillColor="@color/blue"
                indicator:radius="4dp"
                indicator:strokeColor="@color/c7"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/e7"
            />
        <TextView
            android:id="@+id/attitem_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="@string/zan"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:id="@+id/attitem_hongzan_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:src="@mipmap/home_hongxing"
                    />
                <TextView
                    android:id="@+id/attitem_hongzan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/attitem_hongzan_iv"
                    android:layout_marginLeft="6dp"
                    android:text="2"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="@string/huozan"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:id="@+id/attitem_lanzan_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:src="@mipmap/home_hongxing"
                    />
                <TextView
                    android:id="@+id/attitem_lanzan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/attitem_lanzan_iv"
                    android:layout_marginLeft="6dp"
                    android:text="2"
                    />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="10dp"
            android:background="@color/e7"
            />
        <RelativeLayout
            android:id="@+id/attitem_ping_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/attitem_onename_iv"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:actualImageScaleType="centerCrop"
                app:roundAsCircle="true"
                />
            <TextView
                android:id="@+id/attitem_onename_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_toRightOf="@id/attitem_onename_iv"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/attitem_onetime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toRightOf="@id/attitem_onename_iv"
                android:layout_below="@id/attitem_onename_tv"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/a7a"
                />
            <TextView
                android:id="@+id/attitem_onepinglun_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/attitem_onename_iv"
                android:layout_below="@id/attitem_onetime_tv"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:background="@drawable/mine_back"
                />

            <RelativeLayout
                android:id="@+id/attitem_onepinglun_rl"
                android:layout_marginTop="8dp"
                android:background="@color/e7"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attitem_onepinglun_tv"
                android:layout_alignLeft="@+id/attitem_onepinglun_tv"
                android:layout_alignStart="@+id/attitem_onepinglun_tv">
                <TextView
                    android:id="@+id/attitem_comhuifu_tv1"
                    android:background="@drawable/huifu_back"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/attitem_comhuifu_tv2"
                    android:layout_below="@id/attitem_comhuifu_tv1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/huifu_back"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/attitem_huifu_more_tv"
                    android:layout_below="@id/attitem_comhuifu_tv2"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_hui_back"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/attitem_allpinglun_tv"
            android:layout_gravity="right"
            android:textSize="14sp"
            android:background="@drawable/mine_back"
            android:padding="3dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp">
            <View
                android:id="@+id/attitem_bottom_view1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/black"
                android:layout_height="match_parent"/>
            <View
                android:id="@+id/attitem_bottom_view2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/e6"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>