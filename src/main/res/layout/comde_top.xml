<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/comdetop_name_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        app:actualImageScaleType="centerCrop"
        app:roundAsCircle="true"
        />
    <TextView
        android:id="@+id/comdetop_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/comdetop_name_iv"
        android:layout_marginTop="8dp"
        android:textSize="13sp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/comdetop_ping_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mine_back"
        android:layout_below="@+id/comdetop_name_iv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginRight="20dp"
        />
</RelativeLayout>