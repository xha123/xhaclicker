<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/e7"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/comdeitem_name_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        app:actualImageScaleType="centerCrop"
        app:roundAsCircle="true"
        />
    <TextView
        android:id="@+id/comdeitem_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/comdeitem_name_iv"
        android:layout_marginTop="8dp"
        android:textSize="13sp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/comdeitem_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/comdeitem_name_iv"
        android:layout_below="@+id/comdeitem_name_tv"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:textSize="12sp"
        android:textColor="@color/grayfont"

        />
    <TextView
        android:id="@+id/comdeitem_ping_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/comdeitem_name_iv"
        android:layout_below="@+id/comdeitem_time_tv"
        android:background="@drawable/mine_back"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginRight="20dp"
        />
    <RelativeLayout
        android:id="@+id/comdeitem_onepinglun_rl"
        android:visibility="gone"
        android:layout_below="@id/comdeitem_ping_tv"
        android:layout_alignLeft="@id/comdeitem_ping_tv"
        android:layout_marginTop="6dp"
        android:background="@color/e7"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/comdeitem_comhuifu_tv1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/huifu_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/comdeitem_comhuifu_tv2"
            android:layout_below="@id/comdeitem_comhuifu_tv1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/huifu_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/comdeitem_huifu_more_tv"
            android:layout_below="@id/comdeitem_comhuifu_tv2"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/huifu_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</RelativeLayout>