<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bantouming"
    android:layout_height="match_parent">
    <View
        android:id="@+id/shan_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/shan_can_tv"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="38dp"

        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="@string/quxiao"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/blue"
        android:gravity="center"
        android:background="@drawable/white14_roud"
        />
    <TextView
        android:id="@+id/shan_del_tv"
        android:layout_above="@id/shan_can_tv"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:text="@string/del"
        android:textSize="16sp"
        android:textColor="@color/red"
        android:gravity="center"
        android:background="@drawable/white14_roud"
        />

</RelativeLayout>