<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/seekback"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_margin="10dp"
        android:background="@drawable/seek_gray_back"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/seek_seek_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/seek"
            />
        <EditText
            android:id="@+id/seek_seek_ed"
            android:background="#00000000"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/seek_seek_iv"
            android:layout_margin="5dp"
            />
        <ImageView
            android:id="@+id/seek_cancel_iv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/seek"
            />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/seek_tab"
        android:layout_marginTop="10dp"
        app:tabTextColor="@color/grayfont"
        app:tabIndicatorColor="@color/black"
        app:tabBackground="@color/touming"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </android.support.design.widget.TabLayout>
   <android.support.v4.view.ViewPager
       android:id="@+id/seek_viewpager"
       android:layout_marginTop="15dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </android.support.v4.view.ViewPager>
</LinearLayout>